{
  "expo": {
    "name": "Halo",
    "slug": "ProjectHalo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sayan.projecthalo"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.sayan.projecthalo",
      "permissions": [
        "RECORD_AUDIO",
        "INTERNET",
        "VIBRATE"
      ]
    },
    "plugins": [
      "expo-sensors",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Project Halo to detect scams."
        }
      ],
      "expo-speech-recognition"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
